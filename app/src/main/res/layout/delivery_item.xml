<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin">

            <TextView
                android:id="@+id/tv_delivery_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/small_margin"
                android:layout_marginVertical="@dimen/standard_margin"
                android:textAllCaps="true"
                android:textSize="@dimen/large_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="#01" />

            <TextView
                android:id="@+id/tv_client_name_label"
                style="@style/SmallLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:text="@string/nome_do_cliente"
                app:layout_constraintStart_toEndOf="@+id/tv_delivery_id"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_client_name"
                style="@style/StandardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tv_client_name_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_client_name_label"
                tools:text="JessÃ© Manarim" />

            <TextView
                android:id="@+id/tv_quantity_label"
                style="@style/SmallLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/delivery_quantity"
                app:layout_constraintStart_toStartOf="@+id/tv_client_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_client_name" />

            <TextView
                android:id="@+id/tv_quantity"
                style="@style/StandardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tv_quantity_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_quantity_label"
                tools:text="999" />

            <TextView
                android:id="@+id/tv_limit_date_label"
                style="@style/SmallLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_limite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_quantity_label"
                app:layout_constraintTop_toTopOf="@+id/tv_quantity_label" />

            <TextView
                android:id="@+id/tv_limit_date"
                style="@style/StandardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tv_limit_date_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_limit_date_label"
                tools:text="10/12/2023" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>