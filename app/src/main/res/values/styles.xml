<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StandardLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#444444</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="SmallLabel" parent="StandardLabel">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="LargeLabel" parent="StandardLabel">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>


    <style name="StandardText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="SmallText" parent="StandardText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="LargeText" parent="StandardText">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="StandardOutlineTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="StandardOutlineDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="ContentDivider">
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="ContentDivider.Div" parent="ContentDivider">
        <item name="android:background">#aaa</item>
    </style>

    <style name="ContentDivider.Text" parent="ContentDivider">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#aaa</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FeedBackMessage">
        <item name="android:textColor">#aaa</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FeedBackMessage.Title" parent="FeedBackMessage">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="FeedBackMessage.Description" parent="FeedBackMessage">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>


</resources>
